{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-case-declarations": "off",
        "no-unused-vars": "warn",
        "keyword-spacing": [
            "error", { "before": true, "after": true }
        ],
        "array-bracket-spacing": [
            "error", "always"
        ],
        "comma-spacing": [
            "error", { "before": false, "after": true }
        ],
        "object-curly-spacing": [
            "error", "always"
        ],
        "key-spacing": [
            "error", { "beforeColon": false, "afterColon": true }
        ],
        "brace-style": "error",
        "arrow-spacing": "error",
        "space-before-blocks": "error"
    }
}
